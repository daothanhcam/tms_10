<% provide(:title, "Create subject") %>
<h1>Create subject</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@subject) do |f| %>
      <%= render "shared/subject_error_messages" %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :description %>
      <%= f.text_area :description, rows: 3 , class: "form-control" %>

      <h2>Add tasks</h2>
      <%= f.fields_for :tasks do |builder|%>
        <%= render "add_task", f: builder %>
      <% end %>

      <%= f.submit "Create subject",  class: "btn btn-primary" %>
    <% end %>
  </div>
</div>